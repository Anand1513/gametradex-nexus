{
  "name": "gametradex-backend",
  "version": "1.0.0",
  "description": "GameTradeX Backend API with comprehensive testing",
  "main": "simple-server.js",
  "scripts": {
    "start": "node simple-server.js",
    "dev": "nodemon simple-server.js",
    "test": "jest --verbose --detectOpenHandles",
    "test:watch": "jest --watch --verbose",
    "test:coverage": "jest --coverage --verbose",
    "test:migration": "jest tests/listingMigration.test.js --verbose",
    "test:media": "jest tests/mediaHandling.test.js --verbose",
    "setup-db": "node scripts/setupDatabase.js",
    "migrate": "node scripts/migrateListings.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "nodemon": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "gaming",
    "marketplace",
    "api",
    "testing",
    "nodejs",
    "express"
